{
	"name": "@inlang/badge",
	"type": "module",
	"version": "0.5.1",
	"private": true,
	"exports": {
		".": "./dist/index.js",
		"./router": "./dist/router.js"
	},
	"scripts": {
		"dev": "node --loader tsx ./src/main.ts",
		"build": "tsc --build",
		"production": "NODE_ENV=production tsx ./src/main.ts",
		"test": "tsc --noEmit && vitest run --passWithNoTests --coverage src",
		"e2e:install": "npx playwright install --with-deps",
		"e2e": "npx playwright test",
		"lint": "eslint ./src --fix",
		"format": "prettier ./src --write",
		"clean": "rm -rf ./dist ./node_modules"
	},
	"dependencies": {
		"@inlang/sdk": "workspace:*",
		"@inlang/telemetry": "workspace:*",
		"@lix-js/client": "workspace:*",
		"@resvg/resvg-js": "^2.4.1",
		"@sentry/node": "^7.47.0",
		"@sentry/tracing": "^7.47.0",
		"cache-manager": "^5.2.3",
		"compression": "^1.7.4",
		"express": "^4.18.2",
		"satori": "^0.10.3",
		"satori-html": "^0.3.2",
		"tsx": "3.12.7",
		"@inlang/env-variables": "workspace:*"
	},
	"devDependencies": {
		"@playwright/test": "1.39.0",
		"@types/compression": "^1.7.2",
		"@types/express": "4.17.17",
		"@types/node": "20.8.4",
		"@vitest/coverage-v8": "^0.33.0",
		"typescript": "5.2.2",
		"vitest": "0.34.3"
	},
	"peerDependencies": {
		"express": "^4.18.2"
	},
	"license": "Apache-2.0"
}
